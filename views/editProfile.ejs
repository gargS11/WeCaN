<html>

<head>
    <title>Edit Profile</title>
    <!--including head that includes links to linking files-->
    <% include ./head %>

</head>

<body>
    <!--including header-->
    <% include ./header %>

    <!--including sidebar-->
    <% if (user.role ===  'admin') { %>
        <% include ./admin/partials/sidebar %>
    <% } else { %>
        <% include ./user/partials/sidebar %>
    <% } %>

    <div class="container bootstrap snippet">
        <div class="row">
            <div class="col-sm-10">
                <i>
                    <h1>
                        <%= user.username %>
                    </h1>
                </i>
            </div>
        </div>
        <div class="row">

            <form class="form" action="/editProfile" method="post" id="editProfileForm" enctype="multipart/form-data">
                <div class="col-sm-3">
                    <!--left col-->
                    <div class="text-center">
                        <!--<img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                        -->
                        <img src="<%= profile.imgsrc %>" class="avatar img-circle img-thumbnail" alt="avatar">
                        <input type="file" style="display: none;" id="profileUpload" name="profilePhoto" />
                        <input type="button" class="btn btn-default btn-sm" id="changeProfilePicBtn" value="Change"/>
                        
                    </div>
                    </hr>
                    <br>
                </div>
                <!--/col-3-->

                <div class="col-sm-9">
                    <hr>
                    <div class="form-group">

                        <div class="col-xs-6">
                            <label for="full_name">
                                <h4>Full name</h4>
                            </label>
                            <input type="text" class="form-control" name="fullname" id="full_name" value="<%= profile.fullname %>" title="enter your full name"
                                required>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-xs-6">
                            <label for="dob">
                                <h4>DOB</h4>
                            </label>
                            <input type="date" class="form-control" name="dob" id="dob" value="<%= profile.dob%>" title="enter your date of birth" required>
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-xs-6">
                            <label for="mobile">
                                <h4>Mobile</h4>
                            </label>
                            <input type="text" class="form-control" name="mobile" id="mobile" value="<%= profile.mobile %>" title="enter your mobile number"
                                required>
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-xs-6">
                            <label for="gender">
                                <h4>Gender</h4>
                            </label>
                            <input type="text" class="form-control" name="gender" id="gender" value="<%= profile.gender %>" title="enter your gender"
                                required>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-xs-6">
                            <label for="city">
                                <h4>City</h4>
                            </label>
                            <input type="text" class="form-control" name="city" id="ciy" value="<%= profile.city %>" title="enter your city" required>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-xs-6">
                            <label for="hobbies">
                                <h4>Hobbies</h4>
                            </label>
                            <input type="text" class="form-control" name="hobbies" id="hobbies" value="<%= profile.hobbies %>" title="enter your hobbies."
                                required>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-xs-12">
                            <label for="bio">
                                <h4>Bio</h4>
                            </label>
                            <input type="text" class="form-control" name="bio" id="bio" value="<%= profile.bio %>" title="enter your bio." required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <br>
                            <button class="btn btn-lg btn-primary" type="submit">
                                <i class="glyphicon glyphicon-ok-sign"></i> Update</button>
                            <button class="btn btn-lg" type="reset">
                                <i class="glyphicon glyphicon-repeat"></i> Reset</button>
                        </div>
                    </div>

                </div>
                <!--/col-9-->
            </form>
            <hr>
        </div>
        <!--/row-->
    </div>
</body>

</html>
<html>

<head>
    <title>Search Communities</title>
    <!--including head that includes links to linking files-->
    <% include ../head %>
    <link rel="stylesheet" href="/css/community.css">

</head>

<body style="background-color: lavenderblush">
    <!--including header-->
    <% include ../header %>
      
    <!--including sidebar-->
    <% include ./partials/sidebar %>

    <div class="container">
        <h2>Communities</h2>
        <div class="list-group">
            <% if(communitieslist.length > 0) { %>
                <% communitieslist.forEach(function(community) { %>
                    <div class="list-group-item">
                        <img src="<%= community.community_pic %>" alt="loading..." class="loading-community-panel-image"style="height:35px;width:35px;border-radius:50%;">
                        <a href="/user/communityProfile/<%=community._id%>" class="community-name"><%= community.community_name %></a>
                        <span class="community-memcount">Members(<%= community.members.length %>)</span>
                        <% if(community.type === 'direct'){ %>
                            <button class="btn btn-primary btn-sm join-btn">Join</button>
                        <% } else { %>
                            <button class="btn btn-primary btn-sm join-btn">Request to Join</button>
                        <% } %>
                        <br><br>
                        <span class="list-group-item-text community-desc"><%= community.description %></span>
                        
                    </div>
               <% }); %>   
            <% } else { %>
                <div class="list-group-item">
                    <center><h3 class="list-group-item-heading">No Communities Found!</h3></center>
                </div>
            <% } %> 
            
        </div>
    </div>

</body>

</html>